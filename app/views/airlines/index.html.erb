<div class='container'>

<h1>Airlines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Iata</th>
      <th>Phone no</th>
      <th>Contact link</th>
      <th>Pet info link</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airlines.each do |airline| %>
      <tr>
        <td><%= airline.name %></td>
        <td><%= airline.iata %></td>
        <td><%= airline.phone_no %></td>
        <td><%= airline.contact_link %></td>
        <td><%= airline.pet_info_link %></td>
        <td><%= airline.comments %></td>
        <td><%= link_to 'Show', airline %></td>
        <td><%= link_to 'Edit', edit_airline_path(airline) %></td>
        <td><%= link_to 'Destroy', airline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
    <h3>Import a CSV File</h3>
      <%= form_tag import_airlines_path, multipart: true do %>
        <%= file_field_tag :file %><br><br>
        <%= submit_tag "Import CSV" %>
      <% end %>
</div>
<br>

<%= link_to 'New Airline', new_airline_path %>
</div>