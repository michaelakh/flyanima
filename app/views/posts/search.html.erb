<div class='container'>
    <div class=''>
        <%= form_tag search_posts_path, method: :get, class: "navbar-form", role: "search" do %>
        <p>
            <%= text_field_tag :search, params[:search], class: "search" %>
            <%= submit_tag "Search", name: nil, class: "search" %>
        </p>
        <% end %>
    </div>
    <% if @posts.empty? %>
    <div class='search-col-6'>
        <p>
            Sorry but there was no result matching your search.
        </p>
    </div>
    <% else %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th>Category</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
            <td><%= post.category %></td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Post', new_post_path %>
    <% end %>
</div>
